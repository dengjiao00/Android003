<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_city_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp"
        app:cardBackgroundColor="#CAE1FF"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80CAE1FF">

            <TextView
                android:id="@+id/item_city_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="北京"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/item_city_tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="12℃"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/item_city_line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/item_city_tv_temp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#808A87" />

            <TextView
                android:id="@+id/item_city_tv_dcondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_line1"
                android:text="天气:晴"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_city_tv_ncondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_tv_dcondition"
                android:text="天气:晴"
                android:textSize="16sp" />

           <!-- <TextView
                android:id="@+id/item_city_line2"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_below="@id/item_city_line1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/item_city_tv_ncondition"
                android:background="#808A87" />-->

            <TextView
                android:id="@+id/item_city_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_tv_ncondition"
                android:text="西南风2级"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_city_temprange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_line1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="8~10℃"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>